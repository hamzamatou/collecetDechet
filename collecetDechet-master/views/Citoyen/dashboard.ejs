<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Dashboard Citoyen</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f1f3f6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        header {
            margin-bottom: 20px;
            background-color: #0d6efd;
            color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        nav {
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        nav a {
            text-decoration: none;
            color: #0d6efd;
            font-weight: 500;
        }
        nav a:hover { text-decoration: underline; }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .form-section {
            margin-bottom: 30px;
        }
    </style>
</head>
<body class="container py-4">

<header class="text-center">
    <h1>Bienvenue, <%= citoyen.nom %> !</h1>
    <p class="lead">Votre espace personnel pour gérer vos dépôts et points</p>
</header>

<nav class="mb-4">
    <span class="fw-bold">Points : <%= citoyen.points %></span>
    <a href="/citoyen/<%= citoyen.id %>/dechets" class="btn btn-outline-primary btn-sm">Voir mes déchets</a>
</nav>

<section class="form-section">
    <div class="card p-4 bg-white">
        <h2 class="mb-3">Déposer un déchet</h2>

        <!-- ✅ On soumet maintenant vers le contrôleur web -->
        <form id="depotForm" method="POST" action="/citoyen/<%= citoyen.id %>/depot" class="row g-3 align-items-center">
            <input type="hidden" name="citoyenId" value="<%= citoyen.id %>">

            <div class="col-md-4">
                <label for="type" class="form-label">Type de déchet :</label>
                <select id="type" name="type" class="form-select" required>
                    <option value="">-- Sélectionner un type --</option>
                    <option value="Aluminium">Aluminium</option>
                    <option value="Cuivre">Cuivre</option>
                    <option value="Plastique">Plastique</option>
                </select>
            </div>

            <div class="col-md-4">
                <label for="quantite" class="form-label">Quantité (kg) :</label>
                <input type="number" id="quantite" name="quantite" step="0.1" min="0.1" required class="form-control">
            </div>

            <div class="col-md-4 align-self-end">
                <button type="button" id="openModalBtn" class="btn btn-primary w-100">Déposer</button>
            </div>
        </form>
    </div>
</section>

<!-- ✅ Modal Bootstrap -->
<div class="modal fade" id="dateModal" tabindex="-1" aria-labelledby="dateModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="dateModalLabel">Spécifier une date de rencontre</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
      </div>
      <div class="modal-body">
        <label for="dateRencontre" class="form-label">Date de rencontre avec le collecteur :</label>
        <input type="date" id="dateRencontre" name="dateRencontre" class="form-control" required>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" id="confirmDepotBtn" class="btn btn-success">Confirmer le dépôt</button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const depotForm = document.getElementById('depotForm');
    const modal = new bootstrap.Modal(document.getElementById('dateModal'));
    const openModalBtn = document.getElementById('openModalBtn');
    const confirmDepotBtn = document.getElementById('confirmDepotBtn');

    openModalBtn.addEventListener('click', () => {
        const type = document.getElementById('type').value;
        const quantite = document.getElementById('quantite').value;
        if (!type || !quantite) {
            alert("Veuillez remplir le type et la quantité avant de continuer.");
            return;
        }
        modal.show();
    });

    confirmDepotBtn.addEventListener('click', () => {
        const dateRencontre = document.getElementById('dateRencontre').value;
        if (!dateRencontre) {
            alert("Veuillez choisir une date de rencontre !");
            return;
        }

        const inputDate = document.createElement('input');
        inputDate.type = 'hidden';
        inputDate.name = 'dateRencontre';
        inputDate.value = dateRencontre;
        depotForm.appendChild(inputDate);

        depotForm.submit();
    });
</script>

</body>
</html>
